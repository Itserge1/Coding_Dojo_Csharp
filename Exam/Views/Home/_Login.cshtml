@model LogUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/userlogin" method="post">
            <h1>Login</h1>
            <div class="mb-3">
                <label for="lEmail" class="form-label">Email</label>
                <input asp-for="lEmail" class="form-control" id="lEmail">
                <span asp-validation-for = "lEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="lPassword" class="form-label">Password</label>
                <input asp-for="lPassword" class="form-control" id="lPassword">
                <span asp-validation-for = "lPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
</body>
</html>